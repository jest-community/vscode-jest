{
  "comments": {
    "lineComment": "//",
    "blockComment": ["/*", "*/"]
  },
  "brackets": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["<", ">"]
  ],
  "autoClosingPairs": [
    { "open": "{", "close": "}", "notIn": ["comment"] },
    { "open": "[", "close": "]", "notIn": ["comment"] },
    { "open": "(", "close": ")", "notIn": ["comment"] },
    { "open": "'", "close": "'", "notIn": ["comment"] },
    { "open": "\"", "close": "\"", "notIn": ["comment"] },
    { "open": "`", "close": "`", "notIn": ["comment"] },
    { "open": "/**", "close": " */", "notIn": ["string"] }
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["'", "'"],
    ["\"", "\""],
    ["`", "`"],
    ["<", ">"]
  ],
  "colorizedBracketPairs": [
    ["(", ")"],
    ["[", "]"],
    ["{", "}"]
  ]
}
